#: import NavigationBar View.Components.navbar.NavigationBar
<MDRectangleFlatButton>:
    md_bg_color: 'white'  # Background color (purple in this case)
    text_color: 'darkblue'  # Text color (white in this case)
    font_size: '15sp'
    line_color: 'darkblue'
    theme_text_color: "Custom"
    text_color: "black"

<Practise>
    order: 3
    size_hint: (1, 0.9)
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    RelativeLayout:

        FloatLayout:
            size: root.width, root.height

            MDLabel:
                id: question
                pos_hint: {'x': 0.0, 'y': 0.8}
                size_hint: (1.0, None)
                text_size: self.width, None
                halign: 'center'

            MDLabel:
                id: correct_answer
                text: ' '
                theme_text_color: "Custom"
                text_color: "darkblue"
                pos_hint: {"x": 0.0, "y": 0.7}
                font_size: '15sp'
                size_hint: (1.0, None)
                text_size: self.width, None
                halign: 'center'

            MDRectangleFlatButton:
                id: next_button
                text: 'next'
                line_color:'white'
                opacity: 0
                font_size: '20sp'
                size_hint: (0.4, 0.1)
                pos_hint: {'x': 0.3, 'y': 0.6}
                on_press: root.controller.next_button_on_press()
                on_press: root.next_quiz()
                disabled: True

            GridLayout:
                id: answer_button_layout
                cols: 2
                pos_hint: {'x': 0.0, 'y': 0.1}
                size_hint: (1.0, 0.4)

                MDRectangleFlatButton:
                    id: answer0
                    size_hint: 1,1
                    on_press: root.controller.answer_button_on_press(self)

                MDRectangleFlatButton:
                    id: answer1
                    size_hint: 1,1
                    on_press: root.controller.answer_button_on_press(self)

                MDRectangleFlatButton:
                    id: answer2
                    size_hint: 1,1
                    on_press: root.controller.answer_button_on_press(self)

                MDRectangleFlatButton:
                    id: answer3
                    size_hint: 1,1
                    on_press: root.controller.answer_button_on_press(self)
