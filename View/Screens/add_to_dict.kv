<Button>
    font_size: 32
    size_hint: (0.8,0.1)
    color: 0.3, 0.6, 0.7, 1

<TextInput>
    size_hint: (0.8,0.1)


<AddToDict>
    word_label: word_label
    font_size: 15

    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 20

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '90dp'
            spacing: 15

            BoxLayout:
                orientation:'vertical'
                size_hint_x: None
                width: '200dp'

                Label:
                    text: "Enter Word: "
                    font_size: 30
                    size_hint_x: None
                    width: '100dp'

                TextInput:
                    id: word_label
                    multiline:False
                    background_color:0,0,0,0
                    pos_hint:{'left_y': 0.5, 'left_x': 1}

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10

                Label:
                    text: "Translation"

                Button:
                    text: "0"
                    on_press: root.translation_button_action() #add the logic to the translation
                    size_hint: None, None
                    size: '50dp', '50dp'
                    background_color: 0,0,0,0

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10

                Button:
                    text: "+"
                    on_press: root.translation_button_action() #add the logic for adding another logic to the translation
                    size_hint: None, None
                    size: '50dp', '50dp'
                    background_color: 0,0,0,0
                    width: '20dp'

                Label:
                    text: "Enter other translation"
                    size_hint_x: None
                    width: '100dp'


        #Add a Textinput or other notes

        BoxLayout:
            orientation: 'vertical'
            spacing: 10

            Label:
                text: "Notes:"
                font_size: 30
                size_hint_x: None
                width: '200dp'
                spacing: 5

            TextInput:
                multiline: True
                hint_text: ""

            TextInput:
                multiline: True
                hint_text: ""

            TextInput:
                multiline: True
                hint_text: ""

        BoxLayout:
            orientation: 'horizontal'
            spacing: 20

            Label:
                text: "Include in Quiz"
                font_size: 30

            Switch:
                id: include_in_quiz_switch
                active: False

            Button:
                text: "Add to dictionary"
                height: '100dp'
                font_size: 20
                on_press: root.add_to_dictionary()  #Add the logic to the adding to dictionary

