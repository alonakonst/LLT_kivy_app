#: import Dictionary View.Screens.dictionary.Dictionary


<Dictionary>
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    MDBoxLayout:
        orientation: 'vertical'
        padding: 30

        TextInput:
            id: search
            size_hint: (1, None)
            height: 50
            multiline: False
            hint_text: "Search"
            on_focus: root.show_search_results()

        MDScrollView:

            MDList:
                id: container
                padding: 0


<ListItem>
    id: list_item
    size_hint_y: None
    height: content.height
    md_bg_color: 'white'
    anchor: 'left'

    MDCardSwipeLayerBox:

        MDIconButton:
            id: lower_layer
            icon: "trash-can"
            theme_text_color: "Custom"
            text_color: "darkred"
            pos_hint: {"center_y": .5}
            on_release: Dictionary.remove_item(list_item, root)

    MDCardSwipeFrontBox:
        radius:0

        ThreeLineListItem:
            theme_text_color: "Custom"
            id: content
            text: root.text
            text_color: "darkblue"
            secondary_text: root.secondary_text
            tertiary_text: root.tertiary_text
            italic: True
            _no_ripple_effect: True

        MDIconButton:
            id: layer
            icon: "chevron-down"
            theme_text_color: "Custom"
            text_color: "darkblue"
            pos_hint: {"center_y": .5}
            on_press: Dictionary.show_popup(content, root)

