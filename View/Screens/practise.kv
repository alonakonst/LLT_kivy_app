<Practise>
    name: "practise"

    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        Label:
            text: "Question?"
            pos_hint: {'x': 0.5, 'y': 0.8}
            font_size: self.height / 2
            size_hint: (0.1, 0.17)

        Button:
            id: "answer0"
            text: "Answer"
            pos_hint: {"x": 0.0, "y": 0.1}
            size_hint: (0.5, 0.2)
            on_press: root.answer0()

        Button:
            id: "answer1"
            text: "Answer"
            pos_hint: {"x": 0.5, "y": 0.1}
            size_hint: (0.5, 0.2)
            on_press: root.answer1()

        Button:
            id: "answer2"
            text: "Answer"
            pos_hint: {"x": 0.0, "y": 0.3}
            size_hint: (0.5, 0.2)
            on_press: root.answer2()

        Button:
            id: "answer3"
            text: "Answer"
            pos_hint: {"x": 0.5, "y": 0.3}
            size_hint: (0.5, 0.2)
            on_press: root.answer3()