<Button>
    font_size: 32
    size_hint: (0.5,0.1)
    color: 'black'
    background_color: "lightgray"

<TextInput>
    size_hint: (0.8,0.07)
    hint_text_color: 'darkgray'

<AddToDict>

    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        MDLabel:
            text: 'Enter a new word or phrase: '
            text_color: "black"
            pos_hint: {"x": 0.1, "y": 0.80}
            font_size: '20sp'
            size_hint: (1.0, None)
            text_size: self.width, None

        TextInput:
            id: word
            multiline:False
            hint_text: "type here..."
            pos_hint: {"x": 0.1, "y": 0.75}

        MDLabel:
            text: 'Translation: '
            text_color: "black"
            pos_hint: {"x": 0.1, "y": 0.63}
            font_size: '20sp'
            size_hint: (1.0, None)
            text_size: self.width, None

        GridLayout:
            cols:2
            pos_hint: {'x': 0.05, 'y': 0.55}
            size_hint: (0.85, 0.13)

            CheckBox:
                id: suggested_checkbox
                size_hint_x: None

                color: "gray"

            MDLabel:
                id: suggested_translation
                text: 'Suggested: '
                text_color: "darkgray"
                font_size: '15sp'
                size_hint: (1.0, None)
                text_size: self.width, None

            CheckBox:
                id: users_checkbox
                size_hint_x: None
                color: "gray"

            TextInput:
                id: users_translation
                size_hint: (1, None)
                height: 50
                multiline: False
                hint_text: "Enter your own translation..."

        MDLabel:
            id: condition_message
            text: ''
            theme_text_color: "Custom"
            text_color: "darkred"
            pos_hint: {"x": 0.0, "y": 0.4}
            font_size: '10sp'
            size_hint: (1.0, None)
            text_size: self.width, None
            halign: 'center'

        MDLabel:
            text: 'Notes: '
            text_color: "black"
            pos_hint: {"x": 0.1, "y": 0.35}
            font_size: '20sp'
            size_hint: (1.0, None)
            text_size: self.width, None

        TextInput:
            id: notes
            multiline:False
            hint_text: "type your notes here..."
            pos_hint: {"x": 0.1, "y": 0.3}

        Button:
            text: "Submit to dictionary"
            pos_hint: {"x": 0.1, "y": 0.15}
            on_press:root.insert()
            size_hint: (0.8, 0.1)


        Button:
            text: "Show dictionary"
            pos_hint: {"x": 0.0, "y": 0.0}
            on_release:
                app.root.current = "dictionary"

        Button:
            text: "Practise"
            pos_hint: {"x": 0.5, "y": 0.0}
            on_release:
                app.root.current = "practise"
