<Button>
    font_size: 32
    size_hint: (0.5,0.1)
    color: 0.3, 0.6, 0.7, 1

<TextInput>
    size_hint: (0.8,0.07)


<AddToDict>

    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        TextInput:
            id: word
            multiline:False
            hint_text: "Enter a new word or phrase..."
            pos_hint: {"x": 0.1, "y": 0.8}

        TextInput:
            id: translation
            multiline: False
            hint_text: "Enter your translation..."
            pos_hint: {"x": 0.1, "y": 0.5}

        Label:
            text: 'Suggested translation: '
            text_color: "black"
            pos_hint: {"x": 0.3, "y": 0.65}
            font_size: '20sp'
            size_hint: (1.0, None)
            text_size: self.width, None
            halign: 'center'

        Button:
            text: "Submit to dictionary"
            pos_hint: {"x": 0.2, "y": 0.2}
            on_press:root.insert()

        Button:
            text: "Show dictionary"
            pos_hint: {"x": 0.0, "y": 0.0}
            on_release:
                app.root.current = "dictionary"

        Button:
            text: "Practise"
            pos_hint: {"x": 0.5, "y": 0.0}
            on_release:
                app.root.current = "practise"
