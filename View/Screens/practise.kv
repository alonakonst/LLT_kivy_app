<Practise>
    name: "practise"

    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        Label:
            id: question
            pos_hint: {'x': 0.0, 'y': 0.8}
            font_size: '20sp'
            size_hint: (1.0, None)
            text_size: self.width, None
            halign: 'center'

        GridLayout:
            id: answer_button_layout
            cols: 2
            pos_hint: {'x': 0.0, 'y': 0.1}
            size_hint: (1.0, 0.4)

            Button:
                id: answer0
                on_press: root.answer(self)

            Button:
                id: answer1
                on_press: root.answer(self)

            Button:
                id: answer2
                on_press: root.answer(self)

            Button:
                id: answer3
                on_press: root.answer(self)
