<Button>
    font_size: 32
    size_hint: (0.5,0.1)
    color: 0.3, 0.6, 0.7, 1

<TextInput>
    size_hint: (0.8,0.07)


<AddToDict>

    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        MDLabel:
            text: 'Enter a new word or phrase: '
            text_color: "black"
            pos_hint: {"x": 0.1, "y": 0.80}
            font_size: '20sp'
            size_hint: (1.0, None)
            text_size: self.width, None

        TextInput:
            id: word
            multiline:False
            hint_text: "type here..."
            pos_hint: {"x": 0.1, "y": 0.75}

        MDLabel:
            text: 'Translation: '
            text_color: "black"
            pos_hint: {"x": 0.1, "y": 0.63}
            font_size: '20sp'
            size_hint: (1.0, None)
            text_size: self.width, None

        MDLabel:
            text: 'From Google '
            text_color: "darkgray"
            pos_hint: {"x": 0.2, "y": 0.57}
            font_size: '15sp'
            size_hint: (1.0, None)
            text_size: self.width, None

        TextInput:
            id: translation
            multiline: False
            hint_text: "Enter your own translation..."
            pos_hint: {"x": 0.2, "y": 0.52}
            size_hint: (0.7,0.05)

        MDLabel:
            text: 'Notes: '
            text_color: "black"
            pos_hint: {"x": 0.1, "y": 0.4}
            font_size: '20sp'
            size_hint: (1.0, None)
            text_size: self.width, None

        TextInput:
            id: notes
            multiline:False
            hint_text: "type your notes here..."
            pos_hint: {"x": 0.1, "y": 0.35}

        Button:
            text: "Submit to dictionary"
            pos_hint: {"x": 0.1, "y": 0.15}
            on_press:root.insert()
            size_hint: (0.8, 0.1)


        Button:
            text: "Show dictionary"
            pos_hint: {"x": 0.0, "y": 0.0}
            on_release:
                app.root.current = "dictionary"

        Button:
            text: "Practise"
            pos_hint: {"x": 0.5, "y": 0.0}
            on_release:
                app.root.current = "practise"
