<Practise>
    name: "practise"

    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        Label:
            id: 'question'
            text: "Question?"
            pos_hint: {'x': 0.5, 'y': 0.8}
            font_size: self.height / 2
            size_hint: (0.1, 0.17)

        GridLayout:
            cols: 2
            pos_hint: {'x': 0.0, 'y': 0.1}
            size_hint: (1.0, 0.4)

            Button:
                id: "answer0"
                text: "Answer 0"
                on_press: root.answer(self)

            Button:
                id: "answer1"
                text: "Answer 1"
                on_press: root.answer(self)

            Button:
                id: "answer2"
                text: "Answer 2"
                on_press: root.answer(self)

            Button:
                id: "answer3"
                text: "Answer 3"
                on_press: root.answer(self)
