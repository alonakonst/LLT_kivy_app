#: import NavigationBar View.Components.navbar.NavigationBar

<Button>
    font_size: 32
    size_hint: (0.5,0.1)
    color: 'black'
    background_color: "lightgrey"

<TextInput>
    size_hint: (0.8,0.07)
    hint_text_color: 'darkgrey'

<CheckBox>
    color: "grey" #color of the square box

<AddToDict>

    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size




    FloatLayout:
        size: root.width, root.height

        MDLabel:
            text: 'Enter a new word or phrase: '
            pos_hint: {"x": 0.1, "y": 0.90}
            font_size: '20sp'
            size_hint: (1.0, None)
            text_size: self.width, None

        TextInput:
            id: word
            multiline:False
            hint_text: "type here..."
            pos_hint: {"x": 0.1, "y": 0.75}

        MDLabel:
            text: 'Translation: '
            pos_hint: {"x": 0.1, "y": 0.63}
            font_size: '20sp'
            size_hint: (1.0, None)
            text_size: self.width, None

        GridLayout:
            cols: 3
            pos_hint: {'x': 0.05, 'y': 0.43}
            size_hint: (0.85, 0.20)

            MDIconButton:
                id: 'refresh_button'
                icon: 'refresh'
                on_press: self.parent.parent.parent.controller.refresh_button_on_press()

            CheckBox:
                id: suggested_checkbox
                size_hint_x: None

            MDFlatButton:
                size_hint: (0.8, None)
                on_press: root.show_full(suggested_translation.text)

                MDLabel:
                    id: suggested_translation
                    text: 'suggestion'
                    shorten: True
                    text_color: "darkgrey"
                    font_size: '15sp'
                    size_hint: (1.0, None)
                    text_size: self.width, None

            MDIconButton:
                icon: ''

            CheckBox:
                id: users_checkbox
                size_hint_x: None

            TextInput:
                id: users_translation
                size_hint: (1, 1)
                height: 50
                multiline: False
                hint_text: "Enter your own translation..."
                on_focus: root.users_checkbox_active()

        MDLabel:
            id: condition_message
            text: ''
            theme_text_color: "Custom"
            text_color: "darkred"
            pos_hint: {"x": 0.0, "y": 0.4}
            font_size: '13sp'
            size_hint: (1.0, None)
            text_size: self.width, None
            halign: 'center'

        MDLabel:
            text: 'Notes: '
            text_color: "black"
            pos_hint: {"x": 0.1, "y": 0.35}
            font_size: '20sp'
            size_hint: (1.0, None)
            text_size: self.width, None

        TextInput:
            id: notes
            multiline:False
            hint_text: "type your notes here..."
            pos_hint: {"x": 0.1, "y": 0.27}

        Button:
            text: "Submit to dictionary"
            pos_hint: {"x": 0.1, "y": 0.15}
            on_press:root.insert()
            size_hint: (0.8, 0.1)


