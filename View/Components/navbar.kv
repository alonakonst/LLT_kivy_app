
<NavigationBar>:
    id: navbar
    size_hint_y: None
    height: dp(50)
    orientation: 'horizontal'
    pos_hint: {'bottom': 1}

    MDBottomNavigation:
        panel_color: 1, 1, 1, 1

        MDBottomNavigationItem:
            order:'1'
            name: 'add_to_dict'
            text: 'Add'
            on_enter: root.switch_screens(app.root, self.name, self.order)

        MDBottomNavigationItem:
            order:'2'
            name: 'dictionary'
            text: 'Dictionary'
            on_enter: root.switch_screens(app.root, self.name, self.order)

        MDBottomNavigationItem:
            order:'3'
            name: 'practise'
            text: 'Practise'
            on_enter: root.switch_screens(app.root, self.name, self.order)