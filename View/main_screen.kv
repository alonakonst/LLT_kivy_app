<Button>
    font_size: 32
    size_hint: (0.8,0.1)
    color: 0.3, 0.6, 0.7, 1

<TextInput>
    size_hint: (0.8,0.1)

<Label>
    color: 0.3, 0.6, 0.7, 1

MainScreenView:
    WelcomeWindow:
    SecondWindow:
    InsertIntoDictionary:
    DisplayDictionary:


<WelcomeWindow>:
    name: "welc"

    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        Label:
            text: "Name: "
            pos_hint: {'x': 0, 'y': 0.8}
            font_size: self.height
            size_hint: (0.5, 0.17)

        TextInput:
            id:user_name
            multiline:False
            pos_hint: {"x": 0.1, "y": 0.5}

        Button:
            pos_hint: {"x": 0.1, "y": 0.3}
            text:"Login"
            on_release:
                app.root.current = "second"
            on_press:root.btn()

        Button:
            pos_hint: {"x": 0.1, "y": 0.2}
            text:"Continue as a guest"
            on_release:
                app.root.current = "second"



<SecondWindow>:
    name: "second"
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:

        size: root.width, root.height

        Button:
            text: "Go back"
            on_release:
                app.root.current = "welc"

        Button:
            pos_hint: {"x": 0.1, "y": 0.5}
            text: "Next"
            on_release:
                app.root.current = "insert_into_dict"

<InsertIntoDictionary>
    name: "insert_into_dict"
    word_label: word_label

    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        Label:
            id: word_label
            text: "Insert words: "
            pos_hint: {'x': 0, 'y': 0.8}
            font_size: self.height
            size_hint: (0.5, 0.17)

        TextInput:
            id:new_word
            multiline:False
            pos_hint: {"x": 0.1, "y": 0.6}

        Button:
            text: "Back to start"
            on_release:
                app.root.current = "welc"

        Button:
            text: "Submit to dictionary"
            pos_hint: {"x": 0.2, "y": 0.2}


        Button:
            text: "Show dictionary"
            pos_hint: {"x": 0.2, "y": 0.5}
            on_press:root.show_dictionary()
            on_release:
                app.root.current = "dictionary"

<DisplayDictionary>
    name: "dictionary"

    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        Label:
            id: word_label
            text: "ko"
            pos_hint: {'x': 0.5, 'y': 0.5}
            font_size: self.height
            size_hint: (0.1, 0.17)
