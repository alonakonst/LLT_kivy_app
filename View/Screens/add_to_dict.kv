<Button>
    font_size: 32
    size_hint: (0.8,0.1)
    color: 0.3, 0.6, 0.7, 1

<TextInput>
    size_hint: (0.8,0.1)


<AddToDict>
    word_label: word_label

    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        Label:
            id: word_label
            text: "Insert words: "
            color: 255, 99, 71, 0.5
            pos_hint: {'x': 0, 'y': 0.8}
            font_size: self.height
            size_hint: (0.5, 0.17)

        TextInput:
            id: word
            multiline:False
            pos_hint: {"x": 0.1, "y": 0.6}

        Button:
            text: "Submit to dictionary"
            pos_hint: {"x": 0.2, "y": 0.2}
            on_press:root.insert()

        Button:
            text: "Show dictionary"
            pos_hint: {"x": 0.2, "y": 0.5}
            on_release:
                app.root.current = "dictionary"

        Button:
            text: "Practise"
            pos_hint: {"x": 0.2, "y": 0.35}
            on_release:
                app.root.current = "practise"
