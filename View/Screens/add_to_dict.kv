<AddToDict>
    name: "add_dict"
    word_label: word_label
    font_size: 15

    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size


    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 20

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '90dp'
            spacing: 15

            BoxLayout:
                orientation:'vertical'
                size_hint_x: None
                width: '200dp'

                Label:
                    text: "Enter Word: "
                    font_size: 30

                TextInput:
                    id: word_label
                    multiline:False
                    background_color:0,0,0,0

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10

            BoxLayout:
                orientation: 'horizontal'
                spacing: 10

                Button:
                    text: "Translation button"
                    on_press: root.translation() #add the logic to the translation

                Button:
                    text: "+ Add"
                    on_press: root.add_translation() #add the logic for adding another logic to the translation


        #Add a Textinput or other notes

        BoxLayout:
            orientation: 'vertical'
            spacing: 15

            Label:
                text: "Notes:"
                font_size: 20

            TextInput:
                multiline: True
                hint_text: "Add notes here"

            TextInput:
                multiline: True
                hint_text: "Add notes here"

            TextInput:
                multiline: True
                hint_text: "Add notes here"

        BoxLayout:
            orientation: 'horizontal'
            spacing: 20

            Label:
                text: "Include in Quiz"
                font_size: 20

            Switch:
                id: include_in_quiz_switch
                active: False

            Button:
                text: "Add to dictionary"
                height: '100dp'
                on_press: root.add_to_dictionary()  #Add the logic to the adding to dictionary





