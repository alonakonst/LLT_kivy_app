#: import NavigationBar View.Components.navbar.NavigationBar

<MDRaisedButton>:
    md_bg_color: 'white'  # Background color (purple in this case)
    text_color: 'darkblue'  # Text color (white in this case)
    font_size: '15sp'

<TextInput>
    size_hint: (0.8,0.07)
    hint_text_color: 'darkblue'
    padding_y: [self.height / 2 - (self.line_height / 2), 0]
    font_size: '14sp'
    background_color: [0,0,0,0]
    foreground_color: 'darkblue'

<CheckBox>
    color: "grey" #color of the square box

<AddToDict>
    order: 1
    size_hint: (1, 0.9)

    FloatLayout:
        size: root.width, root.height

        MDLabel:
            text: 'Danish word or phrase '
            pos_hint: {"x": 0.1, "y": 0.90}
            font_size: '18sp'
            size_hint: (1.0, None)
            text_size: self.width, None

        TextInput:
            id: word
            multiline:False
            hint_text: "type here..."
            pos_hint: {"x": 0.1, "y": 0.85}
            on_focus: root.users_checkbox_active(users_translation.text)

        MDLabel:
            text: 'Translation: '
            pos_hint: {"x": 0.1, "y": 0.62}
            font_size: '20sp'
            size_hint: (1.0, None)
            text_size: self.width, None

        MDIconButton:
            id: 'refresh_button'
            icon: 'google-translate'
            theme_text_color: "Custom"
            text_color: "darkblue"
            on_press: self.parent.parent.controller.refresh_button_on_press()
            pos_hint: {"x": 0.8, "y": 0.65}

        GridLayout:
            id: gridlayout
            cols: 2
            pos_hint: {'x': 0.05, 'y': 0.47}
            size_hint: (0.85, 0.20)

            CheckBox:
                id: suggested_checkbox
                size_hint_x: None
                disabled: True

            MDFlatButton:
                size_hint: (1, 1)
                on_press: root.show_full(suggested_translation.text)

                MDLabel:
                    id: suggested_translation
                    text: 'suggestion'
                    shorten: True
                    text_color: "darkgrey"
                    font_size: '15sp'
                    size_hint: (1.0, None)
                    text_size: self.width, None

            CheckBox:
                id: users_checkbox
                size_hint_x: None
                disabled: True

            TextInput:
                id: users_translation
                size_hint: (0.5,0.5)
                multiline: False
                hint_text: "Type your own..."
                on_focus: root.users_checkbox_active(word.text)

        MDLabel:
            id: condition_message
            text: ''
            theme_text_color: "Custom"
            text_color: "darkred"
            pos_hint: {"x": 0.0, "y": 0.4}
            font_size: '13sp'
            size_hint: (1.0, None)
            text_size: self.width, None
            halign: 'center'

        MDLabel:
            text: 'Notes: '
            text_color: "black"
            pos_hint: {"x": 0.1, "y": 0.30}
            font_size: '20sp'
            size_hint: (1.0, None)
            text_size: self.width, None

        TextInput:
            id: notes
            multiline: False
            hint_text: "Type your notes here..."
            pos_hint: {"x": 0.1, "y": 0.25}

        MDRectangleFlatButton:
            text: "Submit to dictionary"
            pos_hint: {"x": 0.1, "y": 0.1}
            on_press: root.insert()
            size_hint: (0.8, 0.1)


