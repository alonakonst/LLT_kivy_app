#: import Dictionary View.Screens.dictionary.Dictionary
#: import NavigationBar View.Components.navbar.NavigationBar



<Dictionary>
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size


    RelativeLayout:

        MDScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

                MDList:
                    id: container
                    padding: 0






        NavigationBar:
            size_hint_y: None
            height: dp(50)
            orientation: 'horizontal'
            pos_hint: {'bottom': 1}


<ListItem>
    id: list_item
    size_hint_y: None
    height: content.height
    md_bg_color: 'white'
    anchor: 'left'

    MDCardSwipeLayerBox:

        MDIconButton:
            id: lower_layer
            icon: "trash-can"
            theme_text_color: "Custom"
            text_color: "darkred"
            pos_hint: {"center_y": .5}
            on_release: Dictionary.remove_item(list_item, root)

    MDCardSwipeFrontBox:
        radius:0

        ThreeLineListItem:
            theme_text_color: "Custom"
            id: content
            text: root.text
            text_color: "darkblue"
            secondary_text: root.secondary_text
            tertiary_text: root.tertiary_text

            _no_ripple_effect: True

        MDIconButton:
            id: popup
            icon: "chevron-down"
            theme_text_color: "Custom"
            text_color: "darkblue"
            pos_hint: {"center_x": .9, "center_y": .3}
            on_press: Dictionary.show_popup(content, root)


<PopupContent>:
    title: ''
    separator_height: 0

    size_hint: (0.9, 0.4)
    size: 400, 200
    height: dp(400)
    background: ''
    background_color: (1, 1, 1, 1)

    ScrollView:

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(10)

            MDLabel:
                id: full_word
                theme_text_color: 'Primary'
                theme_text_color: 'Custom'
                text_color: 'darkblue'
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                id: full_translation
                theme_text_color: 'Secondary'
                italic: True
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                id:full_notes
                theme_text_color: 'Secondary'
                italic: True
                size_hint_y: None
                height: self.texture_size[1]
